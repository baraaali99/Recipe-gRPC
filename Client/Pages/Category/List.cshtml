@page
@model Client.Pages.Category.ListModel
@{
ViewData["Title"] = "Categories";
}

@if (@Model.ActionResult != null)
{
	<script type="text/javascript">
		Swal.fire({
			text: '@Model.ActionResult',
			toast: true,
			position: 'top-end',
			showConfirmButton: false,
			icon: 'info',
			timer: 1500
		})
	</script>
}
<style>
    body{background-color:#d1d1d1;}
</style>
<div class="container d-flex justify-content-between align-items-center my-4">
        <h1 class="col-10 c-font c-categories-header pt-5 ms-5">All Categories</h1>
	<div class="col pt-5">
            <a class="btn c-Add-button" href="./Create" >
                Add new
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                </svg>
            </a>
        </div>
</div>
@{int i = 1;}
<div class="row row-cols-auto justify-content-center g-4">
	<table class="table">
		  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category Name</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
	@foreach (var category in Model.CategoryList)
		{
			<tbody>
				<tr>
					<th scope="row">@(i++)</th>
					<td>@category</td>
					<td><a class="btn" asp-page="./Edit" asp-route-category="@category">
							<i class="bi bi-pencil-square"></i>
						</a></td>
					<td><a class="btn" asp-page="./Delete" asp-route-category="@category">
							<i class="bi bi-trash"></i>
						</a>
					</td>
				</tr>
			</tbody>

			}
	</table>
</div>